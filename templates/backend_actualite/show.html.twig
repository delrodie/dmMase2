{% extends 'base.html.twig' %}

{% block title %}Actualite{% endblock %}

{% block body %}
    <h1>Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ actualite.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actualite.contenu }}</td>
            </tr>
            <tr>
                <th>Media</th>
                <td>{{ actualite.media }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ actualite.slug }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ actualite.updatedAt ? actualite.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backend_actualite_index') }}">back to list</a>

    <a href="{{ path('app_backend_actualite_edit', {'id': actualite.id}) }}">edit</a>

    {{ include('backend_actualite/_delete_form.html.twig') }}
{% endblock %}
