{#                    <li class="breadcrumb-item">Qui sommes-nous?</li>#}
                    <li class="breadcrumb-item active" aria-current="page">Contact</li>
                </ol>
            </nav>
        </div>
        <div class="row g-4 mt-5">
            <div class="col-12 col-lg-6 formulaire">
                <h5><span>Nous ecrire</span></h5>
                {{ form_start(form) }}
                <div class="row row-cols-1 mt-5">
                    <div class="form-floating mt-3">
                        {{ form_widget(form.nom) }}
                        {{ form_label(form.nom) }}{{ form_errors(form.nom) }}
                    </div>
                    <div class="form-floating mt-3">
                        {{ form_widget(form.email) }}
                        {{ form_label(form.email) }} {{ form_errors(form.email) }}
                    </div>
                    <div class="form-floating mt-3">
                        {{ form_widget(form.objet) }}
                        {{ form_label(form.objet) }} {{ form_errors(form.objet) }}
                    </div>
                    <div class="form-floating mt-3">
                        {{ form_widget(form.contenu) }}
                        {{ form_label(form.contenu) }} {{ form_errors(form.contenu) }}
                    </div>
                    <div class="mt-5 d-grid gap-2">
                        {{ form_widget(form) }}
                        <button class="btn btn-primary" type="submit" id="sendButton"><i class="bi bi-send"></i> Envoyer</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-12 col-lg-6 cordonnees">
                <h5><span>Nous contacter</span></h5>
                <div class="row row-cols-1 mt-5 gap-4">
                    <div class="col">
